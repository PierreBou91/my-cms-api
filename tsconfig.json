{
    "compilerOptions": {
      "outDir": "dist",
      "incremental": true,
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots" : ["./src/types", "./node_modules/@types"] // necessary for typescript to find the types extended from other libs
    }
  }